<%~ include('./partials/header', it) %>

<div class="max-w-2xl mx-auto space-y-8 animate-fade-in">
    <div class="space-y-2">
        <a href="/" class="text-slate-500 hover:text-white transition-colors text-sm flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            Back to Dashboard
        </a>
        <h1 class="text-4xl font-bold text-white">Sitemap to JSON</h1>
        <p class="text-slate-400 font-light">Convert sitemap structure into structured JSON data.</p>
    </div>

    <form action="/json" method="POST" class="space-y-8 relative">
        <div class="absolute inset-0 -m-8 bg-space-900/50 rounded-3xl border border-white/5 -z-10"></div>

        <!-- Input URL/Source -->
        <div class="space-y-3">
            <label for="input" class="block text-sm font-medium text-slate-300">Sitemap URL <span class="text-red-400">*</span></label>
            <div class="relative group">
                <input type="url" name="input" id="input" required placeholder="https://example.com/sitemap.xml"
                    class="w-full bg-space-950 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-slate-600 focus:outline-none focus:border-brand-500 focus:ring-1 focus:ring-brand-500 transition-all group-hover:border-white/20">
                <div class="absolute right-3 top-3 text-slate-600">
                     <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" /></svg>
                </div>
            </div>
        </div>

        <!-- Filtering Options -->
        <div class="grid md:grid-cols-2 gap-6">
            <div class="space-y-3">
                <label for="include_patterns" class="block text-sm font-medium text-slate-300">Include Patterns</label>
                <input type="text" name="include_patterns" id="include_patterns" placeholder="/blog, /products"
                    class="w-full bg-space-950 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-slate-600 focus:outline-none focus:border-brand-500 focus:ring-1 focus:ring-brand-500 transition-all">
            </div>

            <div class="space-y-3">
                <label for="exclude_patterns" class="block text-sm font-medium text-slate-300">Exclude Patterns</label>
                <input type="text" name="exclude_patterns" id="exclude_patterns" placeholder="/admin, /private"
                    class="w-full bg-space-950 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-slate-600 focus:outline-none focus:border-brand-500 focus:ring-1 focus:ring-brand-500 transition-all">
            </div>
        </div>

        <div class="pt-4">
            <button type="submit" class="w-full bg-gradient-to-r from-brand-600 to-accent-500 hover:from-brand-500 hover:to-accent-400 text-white font-bold py-4 rounded-xl shadow-lg shadow-brand-500/25 transform transition-all duration-200 hover:scale-[1.02] active:scale-[0.98] flex items-center justify-center gap-2">
                <div class="spinner"></div>
                <span>Generate JSON File</span>
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
            </button>
        </div>
    </form>
</div>

<script src="/js/form-handler.js"></script>

<%~ include('./partials/footer', it) %>
