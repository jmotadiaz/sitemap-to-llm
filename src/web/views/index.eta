<%~ include('./partials/header', it) %>

<div class="max-w-4xl mx-auto space-y-12">
    <!-- Hero Section -->
    <div class="text-center space-y-4 animate-fade-in">
        <h1 class="text-5xl md:text-7xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white via-slate-200 to-slate-400 pb-2">
            Sitemap Tools
        </h1>
        <p class="text-xl text-slate-400 max-w-2xl mx-auto font-light">
            Convert your sitemaps into LLM-ready formats instantly. Choose a tool below to get started.
        </p>
    </div>

    <!-- Cards Grid -->
    <div class="grid md:grid-cols-2 gap-6 animate-slide-up" style="animation-delay: 0.2s;">
        <!-- Card: Sitemap to Text -->
        <a href="/txt" class="group relative p-8 rounded-3xl bg-space-900 border border-white/5 hover:border-white/10 transition-colors overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-accent-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10 space-y-4">
                <div class="w-12 h-12 rounded-2xl bg-space-800 border border-white/5 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <span class="font-display font-bold text-xl text-accent-400">Tx</span>
                </div>
                <div>
                    <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-accent-400 transition-colors">Sitemap to Text</h3>
                    <p class="text-slate-400 text-sm leading-relaxed">Extract all URLs from a sitemap and save them as a clean text file. Perfect for simple crawling lists.</p>
                </div>
                <div class="pt-4 flex items-center text-accent-400 font-medium text-sm gap-2 opacity-0 group-hover:opacity-100 transform translate-y-2 group-hover:translate-y-0 transition-all duration-300">
                    Launch Tool <span aria-hidden="true">&rarr;</span>
                </div>
            </div>
        </a>

        <!-- Card: Sitemap to JSON -->
        <a href="/json" class="group relative p-8 rounded-3xl bg-space-900 border border-white/5 hover:border-white/10 transition-colors overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-brand-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10 space-y-4">
                <div class="w-12 h-12 rounded-2xl bg-space-800 border border-white/5 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <span class="font-display font-bold text-xl text-brand-400">Js</span>
                </div>
                <div>
                    <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-brand-400 transition-colors">Sitemap to JSON</h3>
                    <p class="text-slate-400 text-sm leading-relaxed">Convert sitemap structures into structured JSON data. Ideal for programmatic processing.</p>
                </div>
                <div class="pt-4 flex items-center text-brand-400 font-medium text-sm gap-2 opacity-0 group-hover:opacity-100 transform translate-y-2 group-hover:translate-y-0 transition-all duration-300">
                    Launch Tool <span aria-hidden="true">&rarr;</span>
                </div>
            </div>
        </a>

        <!-- Card: Sitemap to Markdown -->
        <a href="/md" class="group relative p-8 rounded-3xl bg-space-900 border border-white/5 hover:border-white/10 transition-colors col-span-1 md:col-span-2 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/5 via-purple-500/5 to-pink-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10 flex flex-col md:flex-row gap-8 items-start md:items-center">
                <div class="w-16 h-16 rounded-2xl bg-space-800 border border-white/5 flex-shrink-0 flex items-center justify-center group-hover:rotate-12 transition-transform duration-300">
                    <span class="font-display font-bold text-2xl text-white">Md</span>
                </div>
                <div class="flex-grow">
                    <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-white transition-colors">Sitemap to Markdown</h3>
                    <p class="text-slate-400 text-sm leading-relaxed max-w-xl">
                        The ultimate tool for LLM context. Crawl every page in a sitemap, extract the content, and save it as formatted Markdown files. optionally zip for download.
                    </p>
                </div>
                <div class="flex-shrink-0">
                    <div class="px-6 py-3 rounded-full bg-white/5 border border-white/10 text-white font-medium text-sm group-hover:bg-white group-hover:text-black transition-all duration-300">
                        Start Scraping
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<%~ include('./partials/footer', it) %>
